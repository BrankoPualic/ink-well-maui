<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InkWell.MAUI.Resources.Styles.CustomStyles">

    <!-- Button styles -->
    <Style x:Key="PrimaryBtn" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BorderColor" Value="White" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderWidth" Value="2" />
    </Style>
    <Style x:Key="SecondaryBtn" TargetType="Button">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="BorderColor" Value="Black" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderWidth" Value="2" />
    </Style>

    <!-- Font styles -->
    <Style x:Key="LabelSmallTextStyleGrey" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="Grey" />
    </Style>
    <Style x:Key="LabelSmallTextStyleDodgerBlue" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="DodgerBlue" />
    </Style>
</ResourceDictionary>