<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InkWell.MAUI.Components.Post"
             x:Name="Self">

    <VerticalStackLayout Padding="10" BindingContext="{x:Reference Self}">

        <Frame BorderColor="Black" CornerRadius="10" Padding="10" HasShadow="True" HeightRequest="150">

            <HorizontalStackLayout>
                <VerticalStackLayout>
                    <Label Text="{Binding Title}" FontSize="Medium" />
                    <Label Text="{Binding Description}" />
                    <Label Text="{Binding CreateDetails}" FontSize="Small" TextColor="LightGray" />
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Read more" FontSize="Small" TextColor="DodgerBlue" TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ReadMoreCommand}" />
                                    </Span.GestureRecognizers>
                                </Span>

                                <Span Text="&#xf178;" FontFamily="FontAwesome" FontSize="12" TextColor="DodgerBlue" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label FontSize="Small" TextColor="LightGrey">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding ViewCount}" />
                                <Span Text="&#xf06e;" FontFamily="FontAwesome" FontSize="12" />

                                <Span Text="{Binding Likes}" />
                                <Span Text="&#xf004;" FontFamily="FontAwesome" FontSize="12" />

                                <Span Text="{Binding Comments}" />
                                <Span Text="&#xf075;" FontFamily="FontAwesome" FontSize="12" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Image Source="{Binding Image}" Aspect="AspectFill" HeightRequest="150" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentView>